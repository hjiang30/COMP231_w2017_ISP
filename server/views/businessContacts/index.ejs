

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1">
     <title><%= title %></title>
    <!--CSS -->
       <link rel='stylesheet' href='/Scripts/lib/bootstrap/dist/css/bootstrap.min.css' />
       <link rel='stylesheet' href='/Scripts/lib/bootstrap/dist/css/bootstrap-theme.min.css' />
       <link rel='stylesheet' href='/Content/reset.css'/>
       <link rel='stylesheet' href='/Content/app.css' />
    
  </head>
  
  <body>
  <!--Scripts -->
    <script src ="/Scripts/lib/jquery/dist/jquery.min.js"></script>
    <script src ="/Scripts/lib/bootstrap/jquery/dist/js/bootstrap.min.js"></script>
    <script src ="/Scripts/app.js"></script>

<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="outerbox">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h3>Business Contact List </h3>
          <a href="/businessContacts/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a Contact</a>
          <br>
          <table class="table table-bordered table-striped table-hover">
            <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Email</th>
              <th class="text-center">Contact</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            <!-- Template Row -->
            <% for (let count = 0; count < businessContacts.length; count++) { %>
            <tr>
              <td class="text-center"><%= businessContacts[count].name %></td>
              <td class="text-center"><%= businessContacts[count].email %></td>
              <td class="text-center"><%= businessContacts[count].contact %></td>
              <td class="text-center">
              <a href="/businessContacts/<%= businessContacts[count]._id %>" class="btn btn-primary">
              <i class="fa fa-pencil-square-o"></i> Edit</a>
               </td>
              <td class="text-center">
              <a href="/businessContacts/delete/<%= businessContacts[count]._id %>" class="btn btn-danger">
              <i class="fa fa-trash-o"></i> Delete</a>
              </td>
            </tr>
            <% } %>
          </table>
        </div>
      </div>
    </div>


